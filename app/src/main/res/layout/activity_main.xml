<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view2"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sailikotturu.mytask1.MainActivity"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout2"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">





        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textView9" />

        <TextView
            android:text="Designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"

            android:id="@+id/textView10" />

        <TextView
            android:text="Years of Experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"

            android:id="@+id/textView11" />

        <TextView
            android:text="Phone no."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"

            android:id="@+id/textView12" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_toRightOf="@id/layout2"
        android:id="@+id/layout3"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <ImageView
            android:paddingLeft="30dp"
            android:layout_width="160dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"


            android:layout_alignParentEnd="true" />

    </LinearLayout>
    <View
        android:id="@+id/viewline1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="110dp"
        android:background="@android:color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">
        <TextView
            android:text="Skills"

            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:id="@+id/textView13" />
    </LinearLayout>
    <GridLayout
        android:layout_marginTop="130dp"
        android:id="@+id/gridview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"




        android:rowCount="3"
        android:columnCount="2"
         >



        <TextView

            android:layout_row="0"
            android:layout_column="0"

            android:id="@+id/textView15"
            android:text="C++" />

        <TextView
            android:text="Android"

            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/textView16" />

        <TextView
            android:text="Java"
            android:paddingLeft="30dp"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/textView18" />

        <TextView
            android:text="WebServices"
            android:paddingLeft="30dp"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/textView19" />
        <TextView
            android:text="Objective C"
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/textView17"
            android:layout_height="wrap_content" />

        <!--<EditText-->
            <!--android:layout_width="180dp"-->
            <!--android:inputType="textPersonName"-->
            <!--android:id="@+id/editText3"-->
            <!--android:layout_column="1"-->
            <!--android:layout_row="2"-->
            <!--android:layout_height="21dp"/>-->

    </GridLayout>

    <View
        android:id="@+id/viewline2"
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginTop="195dp"
        android:background="@android:color/black"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/viewline2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Project - 1"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:id="@+id/textView20"
             />

        <TextView
            android:text="Title"
            android:layout_height="wrap_content"


            android:id="@+id/textView21"
            android:layout_width="100dp"
            android:paddingLeft="40dp"
            android:layout_marginTop="30dp"
             />


        <EditText
            android:layout_width="80dp"
            android:inputType="textPersonName"

            android:id="@+id/editText4"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView20"
            android:layout_toEndOf="@id/textView21"
            android:layout_toRightOf="@id/textView21"/>

        <TextView
            android:text="Summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:paddingLeft="40dp"
            android:id="@+id/textView22" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_below="@+id/textView22"

            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/editText5" />

        <TextView
            android:text="Project - 2"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"

            android:id="@+id/project2"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="Title"
            android:layout_height="wrap_content"


            android:id="@+id/title"
            android:layout_width="100dp"
            android:paddingLeft="40dp"
            android:layout_marginTop="150dp"
            />


        <EditText
            android:layout_width="80dp"
            android:inputType="textPersonName"

            android:id="@+id/titleedit"
            android:layout_height="wrap_content"
            android:layout_below="@id/project2"
            android:layout_toEndOf="@id/title"
            android:layout_toRightOf="@id/title"/>

        <TextView
            android:text="Summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:paddingLeft="40dp"
            android:id="@+id/summary" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_below="@+id/summary"

            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/summaryedit" />

        <Button
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:id="@+id/button"

            android:layout_alignParentEnd="true"

            android:layout_alignParentStart="true"
            android:backgroundTint="@android:color/transparent"

            android:visibility="visible" />


    </RelativeLayout>


</RelativeLayout>
</ScrollView>
